  {
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
    "browser_action": {
        "default_title": "Funtv Gallery"
     },  

    "name": "Funtv Gallery",
    "version": "1.0",
    "description": "Gallery Extension!",
    "permissions": [
      "tabs",
      "webRequest", 
      "webRequestBlocking",
      "declarativeContent", 
      "storage",
      "http://*/*",
      "https://*/*"
    ],
    "web_accessible_resources":[
      "inject.js",
      "js/jquery-2.2.1.js",
      "modal.html",
      "helper.html"
    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
    "manifest_version": 2
  }